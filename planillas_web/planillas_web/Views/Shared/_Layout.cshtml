<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Planillas web</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (ViewBag.Title == "Inicio" || ViewBag.Title == "Login")
                {
                @Html.ActionLink("Planillas web", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
                else {
                @Html.ActionLink("Planillas web", "Main", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
            </div>
            @if (ViewBag.Title == "Inicio" || ViewBag.Title == "Login")
            {
              <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                </ul>
             </div>
            }
            else {
              <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Main", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Empresas<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Empresas", "Index", "Empresas")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Departamentos", "Index", "Departamentos")</li>
                            <li>@Html.ActionLink("Cargos", "Index", "Cargos")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Usuarios<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Tipos de usuario", "Index", "Tipo_usuarios")</li>
                            <li>@Html.ActionLink("Usuarios", "Index", "Usuarios")</li>
                            <!--<li role="separator" class="divider"></li>
                        <li><a href="#">Separated link</a></li>-->
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Empleados<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Empleados", "Index", "Empleados")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Tipos de estado laboral", "Index", "Estados_empleado")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Tipos de ingresos", "Index", "Tipos_ingresos")</li>
                            <li>@Html.ActionLink("Tipos de egresos", "Index", "Tipos_egresos")</li>
                        </ul>
                    </li>
                </ul>
            </div>

            }

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
